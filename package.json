{
  "name": "nikuman",
  "version": "1.0.0",
  "description": "Nuxt.js project",
  "author": "jaxx2104 <jaxx2104@gmail.com>",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build && npm run build-copy-ssr",
    "build-copy-ssr": "rimraf functions/ssr && mkdirp functions/ssr && cp -R .nuxt/dist functions/ssr/dist",
    "build-spa": "nuxt build --spa",
    "build-storybook": "build-storybook -c .storybook -o .tmp/storybook",
    "serve": "firebase serve",
    "deploy": "firebase deploy",
    "start": "nuxt start",
    "storybook": "start-storybook -s ./src/static -c .storybook -p 9001",
    "generate": "nuxt generate",
    "lint": "prettier --write ./**/*.{css,js,json,scss,vue}"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@nuxtjs/pwa": "3.0.0-beta.16",
    "grpc": "1.24.1",
    "nuxt": "2.10.1"
  },
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "3.3.0",
    "@storybook/vue": "5.2.4",
    "babel-eslint": "10.0.3",
    "babel-preset-vue": "2.0.2",
    "copy-to-clipboard": "3.2.0",
    "date-fns": "2.5.1",
    "dotenv": "8.2.0",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-loader": "3.0.2",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-vue": "5.2.3",
    "firebase": "7.2.1",
    "firebase-tools": "7.6.1",
    "husky": "3.0.9",
    "lint-staged": "9.4.2",
    "mkdirp": "0.5.1",
    "prettier": "1.18.2",
    "rimraf": "3.0.0",
    "vue-styled-components": "1.4.13",
    "vuexfire": "3.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
